<ListItemWithCheckbox>:
    iconleft: iconleft
    checkboxright: checkboxright
    IconLeftWidget:
        icon: root.icon
        id: iconleft

    RightCheckbox:
        id: checkboxright


<GraphSelectionDialogContent>
    on_kv_post: root.app = app
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"

    confirm_list: confirm_list

    ScrollView:
        MDList:
            id: confirm_list

<GraphSelectionDialogCategoriesContent>
    orientation: "vertical"
    spacing: "6dp"
    size_hint_y: None
    height: "280dp"

    confirm_list: confirm_list

    ScrollView:
        MDList:
            id: confirm_list

<MonthSelectionDialogContent>
    orientation: "horizontal"
    spacing: "4dp"
    size_hint_y: None
    height: "40dp"
    month_field: month_field
    year_field: year_field
    
    MDTextField:
        size_hint_x: 0.6
        id: month_field
        hint_text: "Month"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: root.open_month_dropdown()
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        icon_right_color_normal: app.button_disable_onwhite_color
        icon_right_color_focus: app.bg_color
        keyboard_mode: 'managed'

    MDTextField:
        size_hint_x: 0.4
        id: year_field
        hint_text: "Year"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: root.open_year_dropdown()
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        icon_right_color_normal: app.button_disable_onwhite_color
        icon_right_color_focus: app.bg_color
        keyboard_mode: 'managed'
        
    
    