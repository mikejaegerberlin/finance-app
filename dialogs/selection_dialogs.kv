<ListItemWithCheckbox>:
    iconleft: iconleft
    checkboxright: checkboxright
    IconLeftWidget:
        icon: root.icon
        id: iconleft

    RightCheckbox:
        id: checkboxright


<GraphSelectionDialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"

    confirm_list: confirm_list

    ScrollView:
        MDList:
            id: confirm_list

<GraphSelectionDialogCategoriesContent>
    orientation: "vertical"
    spacing: "6dp"
    size_hint_y: None
    height: "280dp"

    confirm_list: confirm_list

    ScrollView:
        MDList:
            id: confirm_list

<MonthSelectionDialogContent>
    orientation: "horizontal"
    spacing: "6dp"
    size_hint_y: None
    height: "40dp"
    month_field: month_field
    year_field: year_field
    
    MDTextField:
        size_hint_x: 0.7
        id: month_field
        hint_text: "Month"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: root.month_dropdown.open()
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        keyboard_mode: 'managed'

    MDTextField:
        size_hint_x: 0.3
        id: year_field
        hint_text: "Year"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: root.year_dropdown.open()
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        keyboard_mode: 'managed'
        
    
    