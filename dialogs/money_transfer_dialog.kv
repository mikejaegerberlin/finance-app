<MoneyTransferDialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "240dp"
    accountfield_from: accountfield_from
    accountfield_to: accountfield_to
    amountfield: amountfield
    datefield: datefield
    
    MDTextField:
        id: amountfield
        hint_text: "Amount (â‚¬)"
        color_mode: 'custom'
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        current_hint_text_color: app.bg_color
        text_color: app.bg_color
        on_focus: if self.focus: accountfield_from.focus = False; accountfield_to.focus = False
             
    MDTextField:
        id: accountfield_from
        hint_text: "From account"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: app.open_acc_dropdown(accountfield_from)
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        current_hint_text_color: app.bg_color
        text_color: app.bg_color
        keyboard_mode: 'managed'

    MDTextField:
        id: accountfield_to
        hint_text: "To account"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: app.open_acc_dropdown(accountfield_to)
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        current_hint_text_color: app.bg_color
        text_color: app.bg_color
        keyboard_mode: 'managed'

    MDBoxLayout:
        orientation: 'horizontal'
        MDTextField:
            id: datefield
            hint_text: "Date"
            color_mode: 'custom'
            line_color_normal: app.button_disable_onwhite_color
            line_color_focus: app.bg_color
            current_hint_text_color: app.bg_color
            text_color: app.bg_color
            disabled: True
        MDIconButton:
            icon: "calendar"
            theme_text_color: "Custom"
            text_color: app.bg_color
            on_release: app.open_datepicker(datefield)
            
       
    
        