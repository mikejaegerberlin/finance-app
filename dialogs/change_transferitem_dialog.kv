<ChangeTransferitemContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "150dp"
    datefield: datefield
    purposefield: purposefield
    amountfield: amountfield
    
    MDBoxLayout:
        orientation: 'vertical'
        
        MDTextField:
            id: amountfield
            hint_text: "Amount (â‚¬)"
            color_mode: 'custom'
            line_color_normal: app.button_disable_onwhite_color
            line_color_focus: app.primary_color
            current_hint_text_color: app.primary_color
            text_color: app.primary_color  
         

        MDTextField:
            id: purposefield
            hint_text: "Purpose"
            color_mode: 'custom'
            line_color_normal: app.button_disable_onwhite_color
            line_color_focus: app.primary_color
            current_hint_text_color: app.primary_color
            text_color: app.primary_color
        MDBoxLayout:
            orientation: 'horizontal'
            MDTextField:
                id: datefield
                hint_text: "Date"
                color_mode: 'custom'
                line_color_normal: app.button_disable_onwhite_color
                line_color_focus: app.primary_color
                current_hint_text_color: app.primary_color
                text_color: app.primary_color
                on_focus: if self.focus: app.open_datepicker(datefield)
                disabled: True
            MDIconButton:
                icon: "calendar"
                theme_text_color: "Custom"
                text_color: app.primary_color
                on_release: app.open_datepicker(datefield)