<AddCategoryDialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "110dp"
    namefield: namefield
    on_kv_post: root.app = app
   
    add_category_button: add_category_button
    add_category_button_icon: add_category_button_icon
    add_category_button_text: add_category_button_text
    remove_category_button: remove_category_button
    remove_category_button_icon: remove_category_button_icon
    remove_category_button_text: remove_category_button_text
    


    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_x: 1
        size_hint_y: 1
        MDCard:
            size_hint_x: 0.5
            id: add_category_button
            on_release: root.add_category_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: add_category_button_icon
                    icon: "card-plus"
                    theme_text_color: 'Custom'
                    color: app.green_color
                    halign: 'center'
                MDLabel:
                    id: add_category_button_text
                    text: "Add category"
                    theme_text_color: "Custom"
                    color: app.green_color
                    halign: 'center'
                    font_style: 'Caption'


        MDCard:
            size_hint_x: 0.5
            id: remove_category_button
            on_release: root.remove_category_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: remove_category_button_icon
                    icon: "card-minus"
                    theme_text_color: 'Custom'
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                MDLabel:
                    id: remove_category_button_text
                    text: "Remove category"
                    theme_text_color: "Custom"
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                    font_style: 'Caption'
          

    MDTextField:
        id: namefield
        hint_text: "Category name"
        color_mode: 'custom'
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        on_focus: if self.focus: root.namefield_focus_function()
   
    
