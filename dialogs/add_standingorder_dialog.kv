<AddStandingOrderDialogContent>
    orientation: "vertical"
    spacing: "4dp"
    size_hint_y: None
    height: "480dp"
    accountfield: accountfield
    amountfield: amountfield
    purposefield: purposefield
    dayfield: dayfield
    fromfield_month: fromfield_month
    fromfield_year: fromfield_year
    categoryfield: categoryfield
    executionfield: executionfield
    dialog_income_button: dialog_income_button
    dialog_income_button_icon: dialog_income_button_icon
    dialog_income_button_text: dialog_income_button_text
    dialog_expenditure_button: dialog_expenditure_button
    dialog_expenditure_button_icon: dialog_expenditure_button_icon
    dialog_expenditure_button_text: dialog_expenditure_button_text
    dialog_transfer_button: dialog_expenditure_button
    dialog_transfer_button_icon: dialog_transfer_button_icon
    dialog_transfer_button_text: dialog_transfer_button_text
    on_kv_post: root.app = app


    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 1
        MDCard:
            size_hint: 0.333, 1
            id: dialog_income_button
            on_release: root.income_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: dialog_income_button_icon
                    icon: "bank-plus"
                    theme_text_color: 'Custom'
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                MDLabel:
                    id: dialog_income_button_text
                    text: "Income"
                    theme_text_color: "Custom"
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                    font_style: 'Caption'
            
        MDCard:
            size_hint: 0.333, 1
            id: dialog_expenditure_button
            on_release: root.expenditure_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: dialog_expenditure_button_icon
                    icon: "bank-minus"
                    theme_text_color: 'Custom'
                    color: app.error_color
                    halign: 'center'
                MDLabel:
                    id: dialog_expenditure_button_text
                    text: "Expenditure"
                    theme_text_color: "Custom"
                    color: app.error_color
                    font_style: 'Caption'
                    halign: 'center'

        MDCard:
            size_hint: 0.333, 1
            id: dialog_transfer_button
            on_release: root.transfer_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: dialog_transfer_button_icon
                    icon: "bank-transfer"
                    theme_text_color: 'Custom'
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                MDLabel:
                    id: dialog_transfer_button_text
                    text: "Transfer"
                    theme_text_color: "Custom"
                    font_style: 'Caption'
                    color: app.button_disable_onwhite_color
                    halign: 'center'

          
          

    MDTextField:
        id: amountfield
        hint_text: "Amount (â‚¬)"
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color  
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        on_focus: if self.focus: root.focus_function()
        
        
                
    MDTextField:
        id: accountfield
        hint_text: "Account"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: root.open_acc_dropdown(accountfield)
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color
        icon_right_color_normal: app.button_disable_onwhite_color
        icon_right_color_focus: app.bg_color
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        keyboard_mode: 'managed'

    
    MDBoxLayout:
        orientation: 'horizontal'
        MDTextField:
            id: fromfield_month
            hint_text: "From (month)"
            line_color_normal: app.button_disable_onwhite_color
            line_color_focus: app.bg_color
            hint_text_color_normal: app.bg_color
            hint_text_color_focus: app.bg_color            
            text_color_normal: app.bg_color
            text_color_focus: app.bg_color
            on_focus: if self.focus: root.open_dropdown(fromfield_month)
            keyboard_mode: 'managed'

        MDTextField:
            id: fromfield_year
            hint_text: "From (year)"
            line_color_normal: app.button_disable_onwhite_color
            line_color_focus: app.bg_color
            hint_text_color_normal: app.bg_color
            hint_text_color_focus: app.bg_color            
            text_color_normal: app.bg_color
            text_color_focus: app.bg_color
            on_focus: if self.focus: root.open_dropdown(fromfield_year)
            keyboard_mode: 'managed'       

    MDTextField:
        id: executionfield
        hint_text: "Monthly / Annualy"
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color            
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        on_focus: if self.focus: root.open_dropdown(executionfield)
        keyboard_mode: 'managed'   

    MDTextField:
        id: purposefield
        hint_text: "Purpose"
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color            
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        on_focus: if self.focus: root.purposefield_function()

    MDTextField:
        id: categoryfield
        hint_text: "Category"
        icon_right: "arrow-down-drop-circle-outline"
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color            
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        icon_right_color_normal: app.button_disable_onwhite_color
        icon_right_color_focus: app.bg_color
        on_focus: if self.focus: root.open_cat_dropdown(categoryfield)
        keyboard_mode: 'managed' 

    MDTextField:
        id: dayfield
        hint_text: "Day"
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.bg_color
        hint_text_color_normal: app.bg_color
        hint_text_color_focus: app.bg_color            
        text_color_normal: app.bg_color
        text_color_focus: app.bg_color
        on_focus: if self.focus: root.open_dropdown(dayfield)
        keyboard_mode: 'managed' 