<AddValueDialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "280dp"
    accountfield: accountfield
    amountfield: amountfield
    purposefield: purposefield
    datefield: datefield
    dialog_income_button: dialog_income_button
    dialog_income_button_icon: dialog_income_button_icon
    dialog_income_button_text: dialog_income_button_text
    dialog_expenditure_button: dialog_expenditure_button
    dialog_expenditure_button_icon: dialog_expenditure_button_icon
    dialog_expenditure_button_text: dialog_expenditure_button_text
    dialog_transfer_button: dialog_expenditure_button
    dialog_transfer_button_icon: dialog_transfer_button_icon
    dialog_transfer_button_text: dialog_transfer_button_text
    

    MDBoxLayout:
        orientation: 'horizontal'
        size_hint_x: 1
        size_hint_y: 1
        MDCard:
            size_hint_x: 0.333
            id: dialog_income_button
            on_release: root.income_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: dialog_income_button_icon
                    icon: "bank-plus"
                    theme_text_color: 'Custom'
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                MDLabel:
                    id: dialog_income_button_text
                    text: "Income"
                    theme_text_color: "Custom"
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                    font_style: 'Caption'
            
        MDCard:
            size_hint_x: 0.333
            id: dialog_expenditure_button
            on_release: root.expenditure_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: dialog_expenditure_button_icon
                    icon: "bank-minus"
                    theme_text_color: 'Custom'
                    color: app.error_color
                    halign: 'center'
                MDLabel:
                    id: dialog_expenditure_button_text
                    text: "Expenditure"
                    theme_text_color: "Custom"
                    color: app.error_color
                    font_style: 'Caption'
                    halign: 'center'

        MDCard:
            size_hint_x: 0.333
            id: dialog_transfer_button
            on_release: root.transfer_button_clicked()
            elevation: 0
            MDBoxLayout:
                orientation: "vertical"
                MDIcon:
                    id: dialog_transfer_button_icon
                    icon: "bank-transfer"
                    theme_text_color: 'Custom'
                    color: app.button_disable_onwhite_color
                    halign: 'center'
                MDLabel:
                    id: dialog_transfer_button_text
                    text: "Transfer"
                    theme_text_color: "Custom"
                    font_style: 'Caption'
                    color: app.button_disable_onwhite_color
                    halign: 'center'

          

    MDTextField:
        id: amountfield
        hint_text: "Amount (â‚¬)"
        color_mode: 'custom'
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        on_focus: if self.focus: root.focus_function()
        
        
                
    MDTextField:
        id: accountfield
        hint_text: "Account"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: root.open_acc_dropdown(accountfield)
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        keyboard_mode: 'managed'
        

    MDTextField:
        id: purposefield
        hint_text: "Purpose"
        color_mode: 'custom'
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        on_focus: if self.focus: root.purposefield_function()

    MDBoxLayout:
        orientation: 'horizontal'
        MDTextField:
            id: datefield
            hint_text: "Date"
            color_mode: 'custom'
            line_color_normal: app.button_disable_onwhite_color
            line_color_focus: app.primary_color
            current_hint_text_color: app.primary_color
            text_color: app.primary_color
            disabled: True
        MDIconButton:
            icon: "calendar"
            theme_text_color: "Custom"
            text_color: app.primary_color
            on_release: root.dialog_date.open()