<CategoriesScreen>:
    name: 'Categories'
    categoryview: categoryview
    oneyear_button: oneyear_button
    threeyears_button: threeyears_button
    fiveyears_button: fiveyears_button
    tenyears_button: tenyears_button
    all_button: all_button
    
    MDFloatLayout:
        md_bg_color: app.bg_color

    StackLayout:

        MDToolbar:
            title: 'Categories'
            md_bg_color: app.primary_color
            right_action_items: [["text-box-plus-outline", lambda x: root.dialog_add_category.open()]]
            specific_text_color: app.text_color
                    
        MDBoxLayout:
            size_hint_y: 0.01

        MDBoxLayout:
            size_hint_y: 0.03
            size_hint_x: 1
            id: account_tabs
            orientation: 'horizontal'
            
           

            MDFillRoundFlatButton:
                id: oneyear_button
                text: '1Y'
                size_hint_y: 1
                size_hint_x: 0.125
                font_style: 'Button'
                text_color: app.bg_color
                md_bg_color: app.text_color
                on_release: root.button_clicked(oneyear_button)

            MDFillRoundFlatButton:
                id: threeyears_button
                text: '3Y'
                size_hint_y: 1
                size_hint_x: 0.125
                font_style: 'Button'
                text_color: app.text_color
                md_bg_color: app.bg_color
                on_release: root.button_clicked(threeyears_button)

            MDFillRoundFlatButton:
                id: fiveyears_button
                text: '5Y'
                size_hint_y: 1
                size_hint_x: 0.125
                font_style: 'Button'
                text_color: app.text_color
                md_bg_color: app.bg_color
                on_release: root.button_clicked(fiveyears_button)

            MDFillRoundFlatButton:
                id: tenyears_button
                text: '10Y'
                size_hint_y: 1
                size_hint_x: 0.125
                font_style: 'Button'
                text_color: app.text_color
                md_bg_color: app.bg_color
                on_release: root.button_clicked(tenyears_button)

            MDFillRoundFlatButton:
                id: all_button
                text: 'All'
                size_hint_y: 1
                size_hint_x: 0.125
                font_style: 'Button'
                text_color: app.text_color
                md_bg_color: app.bg_color
                on_release: root.button_clicked(all_button)

        MDCard:
            md_bg_color: app.bg_color
            size_hint_y: 0.4
            MDFloatLayout:
                size: root.width, root.height
                md_bg_color: app.bg_color
                id: categoryview
        MDBoxLayout:
            size_hint_y: 0.1


    MDBoxLayout:
        size_hint_y: 0.075
        size_hint_x: 1
        orientation: 'horizontal'

        MDCard:
            size_hint_y: 1
            size_hint_x: 0.25
            on_release: app.go_to_main()
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'view-compact-outline'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    md_bg_color: app.primary_color
                MDLabel:
                    text: 'Overview'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    md_bg_color: app.primary_color

        MDCard:
            size_hint_y: 1
            size_hint_x: 0.25
            on_release: app.go_to_accounts()
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'account-multiple'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    md_bg_color: app.primary_color   
                MDLabel:
                    text: 'Accounts'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    md_bg_color: app.primary_color

        MDCard:
            size_hint_y: 1
            size_hint_x: 0.25
            
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'chart-pie'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.text_color
                    md_bg_color: app.primary_color   
                MDLabel:
                    text: 'Categories'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.text_color
                    md_bg_color: app.primary_color


        MDCard:
            size_hint_y: 1
            size_hint_x: 0.25
            on_release: app.go_to_standingorders()
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'file-document-multiple-outline'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    md_bg_color: app.primary_color
                   
                MDLabel:
                    text: 'Orders'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    md_bg_color: app.primary_color
               
                           
        
