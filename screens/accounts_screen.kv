<AccountsScreen>:
    name: 'Accounts'
    assetview: assetview
    floating_button: floating_button
    accountsview: accountsview
    accountsview_header: accountsview_header
    main_content: main_content
    onemonth_button: onemonth_button
    threemonths_button: threemonths_button
    sixmonths_button: sixmonths_button
    oneyear_button: oneyear_button
    threeyears_button: threeyears_button
    fiveyears_button: fiveyears_button
    tenyears_button: tenyears_button
    all_button: all_button
    on_kv_post: root.app = app

    MDFloatLayout:
        md_bg_color: app.bg_color
    
    StackLayout:
        id: main_content

        MDToolbar:
            id: main_toolbar
            title: 'Accounts'
            md_bg_color: app.primary_color
            right_action_items: [["cog", lambda x: root.app.dropdown_settings.open()]]
            specific_text_color: app.bg_color
    
        MDBoxLayout:
            size_hint: 1, 0.01

        MDBoxLayout:
            size_hint: 1, 0.03
            
        MDCard:
            elevation: 0
            md_bg_color: app.bg_color
            size_hint: 1, 0.35
            on_release: root.open_dialog_graph_selection()
            MDFloatLayout:
                size: root.width, root.height
                md_bg_color: app.bg_color
                id: assetview
        MDBoxLayout:
            size_hint: 1, 0.03
        MDBoxLayout:
            size_hint: 1, 0.048
            orientation: 'horizontal'
            MDBoxLayout:
                size_hint: 0.1, 1
            MDBoxLayout:
                id: accountsview_header
                orientation: 'horizontal'
                
                size_hint: 0.8, 1
            MDBoxLayout:
                size_hint: 0.1, 1
                
        MDBoxLayout:
            size_hint: 1, 0.4
            orientation: 'horizontal'
            MDBoxLayout:
                size_hint: 0.1, 1
            ScrollView:   
                
                size_hint: 0.8, 1
                MDList:
                    id: accountsview
            MDBoxLayout:
                size_hint: 0.1, 1

    MDFloatLayout:
        MDIconButton:
            icon: 'gesture-tap'
            theme_text_color: 'Custom'
            text_color: app.text_color
            pos_hint:  {'top': 0.855, 'right': 0.95}  
            on_release: root.open_dialog_graph_selection()

    MDFloatLayout:
        MDFillRoundFlatButton:
            id: onemonth_button
            text: '1M'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.bg_color
            md_bg_color: app.text_color
            on_release: root.button_clicked(onemonth_button)
            pos_hint: {'top': 0.92, 'right': 0.125}  
        MDFillRoundFlatButton:
            id: threemonths_button
            text: '3M'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.text_color
            md_bg_color: app.bg_color
            on_release: root.button_clicked(threemonths_button)
            pos_hint: {'top': 0.92, 'right': 0.25}  
        MDFillRoundFlatButton:
            id: sixmonths_button
            text: '6M'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.text_color
            md_bg_color: app.bg_color
            on_release: root.button_clicked(sixmonths_button)
            pos_hint: {'top': 0.92, 'right': 0.375}  
        MDFillRoundFlatButton:
            id: oneyear_button
            text: '1Y'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.text_color
            md_bg_color: app.bg_color
            on_release: root.button_clicked(oneyear_button)
            pos_hint: {'top': 0.92, 'right': 0.5} 
        MDFillRoundFlatButton:
            id: threeyears_button
            text: '3Y'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.text_color
            md_bg_color: app.bg_color
            on_release: root.button_clicked(threeyears_button)
            pos_hint: {'top': 0.92, 'right': 0.625}  
        MDFillRoundFlatButton:
            id: fiveyears_button
            text: '5Y'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.text_color
            md_bg_color: app.bg_color
            on_release: root.button_clicked(fiveyears_button)
            pos_hint: {'top': 0.92, 'right': 0.75} 
        MDFillRoundFlatButton:
            id: tenyears_button
            text: '10Y'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.text_color
            md_bg_color: app.bg_color
            on_release: root.button_clicked(tenyears_button)
            pos_hint: {'top': 0.92, 'right': 0.875} 
        MDFillRoundFlatButton:
            id: all_button
            text: 'All'
            size_hint: 0.125, 0.03
            font_style: 'Button'
            text_color: app.text_color
            md_bg_color: app.bg_color
            on_release: root.button_clicked(all_button)
            pos_hint: {'top': 0.92, 'right': 1}  

    MDBoxLayout:
        size_hint: 1, 0.075
        orientation: 'horizontal'

        MDCard:
            elevation: 0
            size_hint: 0.25, 1
            on_release: app.go_to_main()
            md_bg_color: app.primary_color
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'view-compact-outline'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    
                MDLabel:
                    text: 'Overview'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    

        MDCard:
            elevation: 0
            size_hint: 0.25, 1
            md_bg_color: app.bg_color
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'account-multiple'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.primary_color
                    
                MDLabel:
                    text: 'Accounts'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.primary_color
                    

        MDCard:
            elevation: 0
            size_hint: 0.25, 1
            on_release: app.go_to_categories()
            md_bg_color: app.primary_color 
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'chart-pie'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                   
                MDLabel:
                    text: 'Categories'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                 

        MDCard:
            elevation: 0
            size_hint: 0.25, 1
            on_release: app.go_to_standingorders()
            md_bg_color: app.primary_color 
            MDBoxLayout:
                orientation: 'vertical'
                MDIcon:
                    icon: 'file-document-multiple-outline'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                
                   
                MDLabel:
                    text: 'Orders'
                    font_style: 'Button'
                    halign: 'center'
                    theme_text_color: 'Custom'
                    color: app.bg_color
                    




    MDFloatingActionButton:
        icon: 'bank-plus'
        theme_text_color: 'Custom'
        icon_color: app.bg_color
        text_color: app.bg_color
        id: floating_button
        right_pad: True     
        bg_color_stack_button: app.primary_color
        bg_hint_color: app.primary_color
        md_bg_color: app.primary_color
        x: root.width - self.width - dp(20)
        y: dp(70)
        elevation_normal: 8
        on_release: root.app.open_dialog_add_value()
     
      