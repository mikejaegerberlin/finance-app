#:include screens/account_screen.kv
#:include screens/standing_order_screen.kv
#:include dialogs/add_value_dialog.kv
#:include dialogs/change_transferitem_dialog.kv
#:include dialogs/settings_dialog.kv
#:include dialogs/money_transfer_dialog.kv
#:include dialogs/add_standingorder_dialog.kv

ScreenManager:
    main: main
    account: account
    standing_order: standing_order
    MainScreen:
        id: main
    AccountScreen:
        id: account
    StandingOrdersScreen:
        id: standing_order

<MainScreen>:
    name: 'Main'
    on_pre_enter: root.before_enter()
    assetview: assetview
    nav_drawer: nav_drawer
    floating_button: floating_button
    main_toolbar: main_toolbar
    accountsview: accountsview
    accountsview_header: accountsview_header
    main_content: main_content
    onemonth_button: onemonth_button
    threemonths_button: threemonths_button
    sixmonths_button: sixmonths_button
    oneyear_button: oneyear_button
    threeyears_button: threeyears_button
    fiveyears_button: fiveyears_button
    tenyears_button: tenyears_button
    all_button: all_button
    
    MDNavigationLayout:
        ScreenManager:
            Screen:
                canvas.before:
                    Color:
                        rgba: app.bg_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                StackLayout:
                    id: main_content
                    
                    MDToolbar:
                        id: main_toolbar
                        title: 'General overview'
                        right_action_items: [["pinwheel", lambda x: app.dialog_settings.open()]]
                        elevation: 4
                        md_bg_color: app.primary_color
                        specific_text_color: app.text_color
                        pos_hint: {'top': 1}
                    MDBoxLayout:
                        size_hint_y: 0.01

                    MDBoxLayout:
                        size_hint_y: 0.03
                        size_hint_x: 1
                        id: account_tabs
                        orientation: 'horizontal'
                        
                        MDFillRoundFlatButton:
                            id: onemonth_button
                            text: '1M'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.bg_color
                            md_bg_color: app.text_color
                            on_release: root.button_clicked(onemonth_button)
                            
                        MDFillRoundFlatButton:
                            id: threemonths_button
                            text: '3M'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.text_color
                            md_bg_color: app.bg_color
                            on_release: root.button_clicked(threemonths_button)
                            
                            
                        MDFillRoundFlatButton:
                            id: sixmonths_button
                            text: '6M'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.text_color
                            md_bg_color: app.bg_color
                            on_release: root.button_clicked(sixmonths_button)

                        MDFillRoundFlatButton:
                            id: oneyear_button
                            text: '1Y'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.text_color
                            md_bg_color: app.bg_color
                            on_release: root.button_clicked(oneyear_button)

                        MDFillRoundFlatButton:
                            id: threeyears_button
                            text: '3Y'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.text_color
                            md_bg_color: app.bg_color
                            on_release: root.button_clicked(threeyears_button)

                        MDFillRoundFlatButton:
                            id: fiveyears_button
                            text: '5Y'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.text_color
                            md_bg_color: app.bg_color
                            on_release: root.button_clicked(fiveyears_button)

                        MDFillRoundFlatButton:
                            id: tenyears_button
                            text: '10Y'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.text_color
                            md_bg_color: app.bg_color
                            on_release: root.button_clicked(tenyears_button)

                        MDFillRoundFlatButton:
                            id: all_button
                            text: 'All'
                            size_hint_y: 1
                            size_hint_x: 0.125
                            font_style: 'Button'
                            text_color: app.text_color
                            md_bg_color: app.bg_color
                            on_release: root.button_clicked(all_button)

                    MDCard:
                        md_bg_color: app.bg_color
                        size_hint_y: 0.4
                        MDFloatLayout:
                            
                            size: root.width, root.height
                            md_bg_color: app.bg_color
                            id: assetview


                    MDBoxLayout:
                        size_hint_y: 0.03

                    MDBoxLayout:
                        size_hint_y: 0.048
                        orientation: 'horizontal'
                        MDBoxLayout:
                            size_hint_x: 0.1
                        MDBoxLayout:
                            id: accountsview_header
                            orientation: 'horizontal'
                            size_hint_y: 1
                            size_hint_x: 0.8
                        MDBoxLayout:
                            size_hint_x: 0.1
                          
                    MDBoxLayout:
                        size_hint_y: 0.4
                        orientation: 'horizontal'
                        MDBoxLayout:
                            size_hint_x: 0.1
                        ScrollView:   
                            size_hint_y: 1
                            size_hint_x: 0.8
                            MDList:
                                id: accountsview
                        MDBoxLayout:
                            size_hint_x: 0.1
                     
                MDFloatingActionButtonSpeedDial:
                    id: floating_button
                    data: app.data_floating_button
                    root_button_anim: True
                    right_pad: True
                    theme_text_color: 'Custom'
                    callback: app.callback_floatingbutton
                    bg_color_stack_button: app.primary_color
                    bg_hint_color: app.primary_color
                    md_bg_color: app.primary_color
                    bg_color_root_button: app.primary_color
                    color_icon_root_button: app.text_color
                    color_icon_stack_button: app.text_color
                    label_text_color: app.primary_color
                    label_color: app.green_color
                    x: root.width - self.width - dp(20)
                    y: dp(90)
                    elevation_normal: 8
                    on_open: app.screen.main.ids.main_content.canvas.opacity = 0.2
                    on_close: app.screen.main.ids.main_content.canvas.opacity = 1
                    
        MDNavigationDrawer:
            id: nav_drawer
            canvas:
                Color:
                    rgba: app.bg_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: 'vertical'
                spacing: '8dp'
                padding: '8dp'
                MDLabel:
                    text: '    My Haushaltsbuch'
                    font_style: 'Subtitle1'
                    size_hint_y: None
                    height: self.texture_size[1]
                    color: app.text_color
                    
 
                ScrollView:
                    MDList:
                        OneLineListItem:
                            text: 'Home'
                            theme_text_color: 'Custom'
                            text_color: app.text_color
                            on_release: root.manager.current = 'Main'
                            bg_color: app.bg_color
                            
                            
                        OneLineListItem:
                            text: 'DKB'
                            theme_text_color: 'Custom'
                            text_color: app.text_color
                            on_release: root.manager.current = 'Account'
                            bg_color: app.bg_color
                            
                        OneLineListItem:
                            theme_text_color: 'Custom'
                            text_color: app.text_color
                            text: 'ING'
                            bg_color: app.bg_color
                            
