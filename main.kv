ScreenManager:
    main: main
    transfer: transfers
    MainScreen:
        id: main
    TransfersScreen:
        id: transfers


<MainScreen>:
    name: 'Main'
    accounts_screen: accounts_screen
    overview_screen: overview_screen

    MDBoxLayout:
        orientation: 'vertical'
 
        MDBottomNavigation:
            panel_color: app.primary_color
            text_color_active: app.text_color
            text_color_normal: app.bg_color
            
            OverviewScreen:
                id: overview_screen
                name: 'Overview'
                text: 'Overview'
                icon: 'view-compact-outline'

            AccountsScreen:
                id: accounts_screen
                name: 'Accounts'
                text: 'Accounts'
                icon: 'account-multiple'
                

            StandingOrdersScreen:
                name: 'Standing orders'
                text: 'Standing orders'
                icon: 'file-document-multiple-outline'

            
               
            
              
