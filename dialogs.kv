<SettingsDialogContent>
    spacing: "4dp"
    size_hint_y: None
    height: "220dp"
    slider_labelsize: slider_labelsize
    slider_titlesize: slider_titlesize
    slider_linewidth: slider_linewidth
    slider_markersize: slider_markersize
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: 'Labelsize'
                font_style: 'Subtitle1'
                size_hint_y: None
                color: app.primary_color
            MDSlider:
                id: slider_labelsize
                min: 8
                max: 36
                value: app.slider_labelsize_current
                on_touch_up: app.update_sizes()
                color: app.primary_color 
                hint_text_color: app.primary_color     

        BoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: 'Titlesize'
                font_style: 'Subtitle1'
                size_hint_y: None
                color: app.primary_color
                
            MDSlider:
                id: slider_titlesize
                min: 14
                max: 36
                value: app.slider_titlesize_current 
                on_touch_up: app.update_sizes()    
                color: app.primary_color   
                hint_text_color: app.primary_color      
        BoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: 'Linewidth'
                font_style: 'Subtitle1'
                size_hint_y: None
                color: app.primary_color
                
            MDSlider:
                id: slider_linewidth
                min: 2
                max: 16
                value: app.slider_linewidth_current 
                on_touch_up: app.update_sizes()    
                color: app.primary_color    
                hint_text_color: app.primary_color        

        BoxLayout:
            orientation: 'horizontal'
            MDLabel:
                text: 'Markersize'
                font_style: 'Subtitle1'
                size_hint_y: None
                color: app.primary_color
                
            MDSlider:
                id: slider_markersize
                min: 2
                max: 16
                value: app.slider_markersize_current 
                on_touch_up: app.update_sizes()    
                color: app.primary_color   
                hint_text_color: app.primary_color               

<AddValueDialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "280dp"
    accountfield: accountfield
    amountfield: amountfield
    purposefield: purposefield
    datefield: datefield
    dialog_income_button: dialog_income_button
    dialog_expenditure_button: dialog_expenditure_button

    BoxLayout:
        orientation: 'horizontal'
        MDRectangleFlatIconButton:
            icon: "bank-plus"
            text: "Income"
            theme_text_color: "Custom"
            id: dialog_income_button
            text_color: app.button_disable_onwhite_color
            line_color: app.button_disable_onwhite_color
            icon_color: app.button_disable_onwhite_color
            on_release: root.income_button_clicked()
        MDRectangleFlatIconButton:
            icon: "bank-minus"
            text: "Expenditure"
            theme_text_color: "Custom"
            id: dialog_expenditure_button
            text_color: app.error_color
            line_color: app.error_color
            icon_color: app.error_color
            on_release: root.expenditure_button_clicked()
          

    MDTextField:
        id: amountfield
        hint_text: "Amount (â‚¬)"
        color_mode: 'custom'
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        on_focus: if self.focus: accountfield.focus = False
        
        
                
    MDTextField:
        id: accountfield
        hint_text: "Account"
        icon_right: "arrow-down-drop-circle-outline"
        on_focus: if self.focus: app.open_add_value_acc_dropdown()
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        keyboard_mode: 'managed'
        

    MDTextField:
        id: purposefield
        hint_text: "Purpose"
        color_mode: 'custom'
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        on_focus: if self.focus: accountfield.focus = False

    MDTextField:
        id: datefield
        hint_text: "Date"
        color_mode: 'custom'
        line_color_normal: app.button_disable_onwhite_color
        line_color_focus: app.primary_color
        current_hint_text_color: app.primary_color
        text_color: app.primary_color
        on_focus: if self.focus: app.open_add_value_datepicker()
        keyboard_mode: 'managed'